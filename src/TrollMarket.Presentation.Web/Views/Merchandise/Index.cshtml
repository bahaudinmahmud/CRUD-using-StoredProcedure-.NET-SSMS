@model MerchandiseIndexViewModel;

<div class="menu">
    Merchandise
</div>

<div class="grid-container">
    <a asp-controller="merchandise" asp-action="Insert" class="blue-button create-button">Add New Product</a>
    <table>
        <thead>
        <th>Action</th>
        <th>Name</th>
        <th>Category</th>
        <th>Discontinue</th>
        </thead>
        <tbody>
            @foreach (var merchandise in Model.Merchandises)
            {   
                <tr>
                    <td>
                        <a asp-action="Update" asp-route-id="@merchandise.Id" class="blue-button update-button">Update</a>
                        <a asp-action="delete" asp-route-id="@merchandise.Id" class="blue-button delete-button">Delete</a>
                        <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal_@merchandise.Id">
                            Detail
                        </button>                       @if (merchandise.Discontinue == false)
                        {
                            <a asp-action="Discontinue" asp-route-id="@merchandise.Id" class="blue-button detail-button">Discontinue</a>
                        }
                        else
                        {
                            <span class="disabled-button">Discontinue</span>
                        }
                    </td>
                    <td>@merchandise.ProductName</td>
                    <td>@merchandise.Category</td>
                    <td>@(merchandise.Discontinue? "yes":"no")</td>
                </tr>
            }
        </tbody>
    </table>
</div>

@foreach (var merchandise in Model.Merchandises)
{
    <div class="modal fade" id="exampleModal_@merchandise.Id" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Customer Detail</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <table>
                        <tbody>
                            <tr>
                                <td>Name</td>
                                <td>@merchandise.ProductName</td>
                            </tr>
                            <tr>
                                <td>Category</td>
                                <td>@merchandise.Category</td>
                            </tr>
                            <tr>
                                <td>Descripstion</td>
                                <td>@merchandise.Description</td>
                            </tr>
                            <tr>
                                <td>Price</td>
                                <td>@merchandise.Price.ToString("C0")</td>
                            </tr>
                            <tr>
                                <td>Seller Name</td>
                                <td>@merchandise.SellerName</td>
                            </tr>

                        </tbody>
                    </table>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>

}
